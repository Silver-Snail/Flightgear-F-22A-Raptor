<?xml version="1.0"?>


<PropertyList>

 <model>
		<path>Aircraft/F-22/Models/Interior/Instruments/MFD/FLTPG.ac</path>
			<offsets>
				<x-m>0</x-m>
					<y-m>0</y-m>
				<z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

	 <animation>
  <type>material</type>
  <object-name>afterburner</object-name>
  <object-name>hook</object-name>
  <object-name>bay</object-name>
  <object-name>canpy</object-name>
  
  <ambient>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </ambient>
  <diffuse>
    <red>0.1</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </diffuse>
  <emission>
    <red>0.8</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission> 
 </animation>


	 <text>
  <name>afterburner</name>
  <font>condensed.txf</font>
  <character-size type="double">0.0056</character-size>
  <offsets>
  <x-m>0.01</x-m>
   <y-m>-0.08</y-m>
   <z-m>-0.03</z-m>
  </offsets>
  <axis-alignment>yz-plane</axis-alignment>
  <type type="string">literal</type>
  <text type="string">AFTRBRN</text>
  <draw-text type="bool">true</draw-text>
  <alignment>left-top</alignment>
 </text>

  <animation>
        <type>select</type>
        <object-name>afterburner</object-name>
        
        <condition>
       <property>engines/engine[0]/augmentation</property>
        </condition>
    </animation>
	
	<text>
  <name>bay</name>
  <font>condensed.txf</font>
  <character-size type="double">0.0056</character-size>
  <offsets>
  <x-m>0.01</x-m>
   <y-m>-0.08</y-m>
   <z-m>-0.04</z-m>
  </offsets>
  <axis-alignment>yz-plane</axis-alignment>
  <type type="string">literal</type>
  <text type="string">BAY OPEN</text>
  <draw-text type="bool">true</draw-text>
  <alignment>left-top</alignment>
 </text>

  <animation>
        <type>select</type>
        <object-name>bay</object-name>
        
        <condition>
       <property>baydoors/position-norm</property>
        </condition>
    </animation>
	
	<text>
  <name>canpy</name>
  <font>condensed.txf</font>
  <character-size type="double">0.0056</character-size>
  <offsets>
  <x-m>0.01</x-m>
   <y-m>-0.08</y-m>
   <z-m>-0.05</z-m>
  </offsets>
  <axis-alignment>yz-plane</axis-alignment>
  <type type="string">literal</type>
  <text type="string">CANOPY</text>
  <draw-text type="bool">true</draw-text>
  <alignment>left-top</alignment>
 </text>

  <animation>
	<type>select</type>
	<object-name>canpy</object-name>
	<condition>
		<not-equals>
			<property>canopy/position-norm</property>
			<value>0</value>
		</not-equals>
	</condition>
</animation>


	
</PropertyList>
